/* Layout Stylesheet
 *    Don't put colors here - use the separate "-light" and "-dark"
 * stylesheets.
 */
body {
  font-family: Helvetica, Arial, sans-serif;
  font-size: 100%;		/* specify other font sizes in `em' */
}

/* link decorations that aren't styled by the "light" or "dark" sheets */
a {
  background-color: transparent;
}
a:link {
  text-decoration: none;
}
a:visited {
  text-decoration: none;
}
a:hover {
  text-decoration: underline;
}
a:active {
  text-decoration: underline;
}

.center {
  text-align: center;
}

/* bounding division around the canvas elements for CSS to resize */
.graphdiv {
  min-height: 400px;
  max-height: 600px;
  position: relative;
}

/* the graph itself - non-color standard & custom properties */
.graph {
  font-family: Helvetica, Arial, sans-serif;
  font-size: 0.875em;		/* for labels */
  /* --graph-min-aspect: 0.5625;	/\* 9 / 16 *\/ */
  --graph-min-aspect: 0.75;		  /* 3 / 4 */
  --graph-max-aspect: 1.7777777777777777; /* 16 / 9 */
  --graph-border: 50;		/* pixels */
}

.scaleimg {
  max-width: 100%;
  height: auto;
  padding-top: 10px;
}

